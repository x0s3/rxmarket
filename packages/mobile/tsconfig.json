{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["../../node_modules/@types"],
    "types": [
      "react",
      "react-native",
      "react-redux",
      "react-native-vector-icons",
      "jest",
      "react-test-renderer"
    ]
  },
  "exclude": [
    "../../node_modules",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": ["src/**/*"]
}
