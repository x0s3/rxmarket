{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "noEmit": false,
    "allowJs": false,
    "declaration": true,
    "composite": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
