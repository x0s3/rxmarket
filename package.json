  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "debug:android": "lerna exec --scope mobile react-native run-android --stream",
    "debug:ios": "lerna exec --scope mobile react-native run-ios --stream",
    "dev:mobile": "lerna run start --scope mobile --stream",
    "dev:server": "lerna exec --scope server -- yarn start:dev --stream",
    "dev:server-watch": "lerna exec --scope server -- yarn watch --stream",
    "lint:mobile": "lerna run lint --scope mobile --stream",
    "lint:server": "lerna run lint --scope server --stream",
    "test:server": "lerna exec --scope server -- yarn test",
    "test:mobile": "lerna exec --scope mobile -- yarn test",
    "build:server": "lerna run build --scope server --stream",
    "build:mobile": "lerna run build --scope mobile --stream",
    "build:core": "lerna run build --scope core --stream",
    "prod:server": "lerna run start:prod --scope server --stream",
    "open:ios": "open packages/mobile/ios/rxmarket.xcworkspace/",
    "push": "lerna version"
  },
  "devDependencies": {
    "lerna": "^3.15.0",
    "rxjs-tslint-rules": "^4.24.3",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.1.1",
    "typescript": "^3.5.3"
  }
}
